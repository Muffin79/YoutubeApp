<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context="com.example.muffin.youtubeapp.fragments.ChannelAboutFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margin"
        android:text="@string/about" />

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider_color"
        android:layout_gravity="bottom" />

    <TextView
        android:id="@+id/channel_description_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/channel_about_item_margin"
        />

    <TextView
        android:id="@+id/txt_joined"
        android:layout_marginTop="@dimen/channel_about_item_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/channel_about_item_margin"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider_color"
        android:layout_gravity="bottom" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="2">

        <TextView
            android:id="@+id/txt_view_count"
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/standard_margin"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_subsribers_count"
            />
    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider_color"
        android:layout_gravity="bottom" />


</LinearLayout>
